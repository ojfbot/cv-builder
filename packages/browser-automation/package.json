{
  "name": "@cv-builder/browser-automation",
  "version": "0.3.0",
  "description": "Browser automation service with Playwright for UI testing, screenshot capture, and user interactions",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "browser-automation": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "cli": "tsx src/cli/index.ts",
    "type-check": "tsc --noEmit",
    "test": "tsx tests/integration/basic-workflow.test.ts",
    "test:phase2": "tsx tests/features/phase2-element-store-maps.test.ts",
    "test:phase3": "tsx tests/features/phase3-features.test.ts",
    "test:cv-builder": "tsx tests/apps/cv-builder-integration.test.ts",
    "test:ui-nav": "tsx tests/ui/cv-builder-navigation.test.ts",
    "test:bio-form": "tsx tests/cv-builder/bio-form/navigation.test.ts && tsx tests/cv-builder/bio-form/add-bio-flow.test.ts",
    "test:chat": "tsx tests/cv-builder/chat/message-input.test.ts",
    "test:interactive": "tsx tests/cv-builder/interactive/navigation.test.ts",
    "test:jobs": "tsx tests/cv-builder/jobs/navigation.test.ts",
    "test:outputs": "tsx tests/cv-builder/outputs/navigation.test.ts",
    "test:settings": "tsx tests/cv-builder/settings/modal-interactions.test.ts",
    "test:sidebar": "tsx tests/cv-builder/sidebar/toggle-interactions.test.ts",
    "test:theme": "tsx tests/cv-builder/theme/theme-switching.test.ts",
    "test:comprehensive": "tsx scripts/run-comprehensive-tests.ts",
    "test:observability": "tsx tests/unit/observability/observability.test.ts",
    "test:dev-mode": "tsx tests/unit/middleware/dev-mode.test.ts",
    "test:rate-limit": "tsx tests/unit/middleware/rate-limit.test.ts",
    "test:unit": "npm run test:observability && npm run test:dev-mode",
    "test:all": "npm run test && npm run test:phase2 && npm run test:phase3 && npm run test:comprehensive && npm run test:cv-builder && npm run test:ui-nav",
    "test:watch": "tsx watch tests/integration/basic-workflow.test.ts"
  },
  "keywords": [
    "playwright",
    "browser-automation",
    "screenshot",
    "testing",
    "docker"
  ],
  "author": "CV Builder Team",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fuse.js": "^7.1.0",
    "js-yaml": "^4.1.1",
    "playwright": "^1.40.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.9.0",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.13.2",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3"
  }
}
