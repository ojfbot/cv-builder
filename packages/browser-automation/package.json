{
  "name": "@cv-builder/browser-automation",
  "version": "0.3.0",
  "description": "Browser automation service with Playwright for UI testing, screenshot capture, and user interactions",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "browser-automation": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "cli": "tsx src/cli/index.ts",
    "type-check": "tsc --noEmit",
    "test": "tsx tests/integration/basic-workflow.test.ts",
    "test:all": "tsx tests/**/*.test.ts",
    "test:watch": "tsx watch tests/integration/basic-workflow.test.ts"
  },
  "keywords": [
    "playwright",
    "browser-automation",
    "screenshot",
    "testing",
    "docker"
  ],
  "author": "CV Builder Team",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "js-yaml": "^4.1.1",
    "playwright": "^1.40.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.9.0",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.13.2",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3"
  }
}
