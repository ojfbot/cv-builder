{
  "app": "cv-builder",
  "storeType": "redux",
  "accessPath": "window.store",
  "alternativeAccessPaths": [
    "window.__REDUX_STORE__"
  ],
  "version": "1.0.0",
  "updated": "2025-11-16T12:00:00Z",
  "queries": {
    "currentTab": {
      "path": "navigation.currentTab",
      "type": "string",
      "values": ["bio", "jobs", "outputs", "interactive"],
      "description": "Currently active dashboard tab key"
    },
    "currentTabIndex": {
      "path": "navigation.currentTabIndex",
      "type": "number",
      "values": [0, 1, 2, 3],
      "description": "Currently active dashboard tab index (0=Bio, 1=Jobs, 2=Outputs, 3=Interactive)"
    },
    "sidebarOpen": {
      "path": "navigation.sidebarOpen",
      "type": "boolean",
      "description": "Whether navigation sidebar is open"
    },
    "chatExpanded": {
      "path": "chat.isExpanded",
      "type": "boolean",
      "description": "Whether chat window is expanded to full-screen"
    },
    "draftInput": {
      "path": "chat.draftInput",
      "type": "string",
      "description": "Current chat input text (draft)"
    },
    "chatLoading": {
      "path": "chat.isLoading",
      "type": "boolean",
      "description": "Whether chat is processing a message"
    },
    "theme": {
      "path": "navigation.theme",
      "type": "string",
      "values": ["light", "dark"],
      "description": "Current UI theme"
    },
    "isAuthenticated": {
      "path": "state.auth.isAuthenticated",
      "type": "boolean",
      "description": "User authentication status"
    },
    "currentUser": {
      "path": "state.auth.user",
      "type": "object",
      "description": "Current user object with profile information"
    },
    "userId": {
      "path": "state.auth.user.id",
      "type": "string",
      "description": "Current user's unique identifier"
    },
    "userName": {
      "path": "state.auth.user.name",
      "type": "string",
      "description": "Current user's display name"
    },
    "bioData": {
      "path": "state.bio.data",
      "type": "object",
      "description": "User's bio/resume information"
    },
    "bioFullName": {
      "path": "state.bio.data.fullName",
      "type": "string",
      "description": "User's full name from bio"
    },
    "bioEmail": {
      "path": "state.bio.data.email",
      "type": "string",
      "description": "User's email address from bio"
    },
    "bioPhone": {
      "path": "state.bio.data.phone",
      "type": "string",
      "description": "User's phone number from bio"
    },
    "bioExperiences": {
      "path": "state.bio.data.experiences",
      "type": "array",
      "description": "Array of work experiences"
    },
    "bioEducation": {
      "path": "state.bio.data.education",
      "type": "array",
      "description": "Array of education entries"
    },
    "bioSkills": {
      "path": "state.bio.data.skills",
      "type": "array",
      "description": "Array of skills"
    },
    "bioLoading": {
      "path": "state.bio.loading",
      "type": "boolean",
      "description": "Whether bio data is currently loading"
    },
    "bioError": {
      "path": "state.bio.error",
      "type": "string",
      "description": "Bio loading error message (if any)"
    },
    "jobs": {
      "path": "state.jobs.list",
      "type": "array",
      "description": "List of saved job postings"
    },
    "jobCount": {
      "path": "state.jobs.list.length",
      "type": "number",
      "description": "Number of saved job postings"
    },
    "selectedJob": {
      "path": "state.jobs.selectedJob",
      "type": "object",
      "description": "Currently selected job for viewing/editing"
    },
    "selectedJobId": {
      "path": "state.jobs.selectedJob.id",
      "type": "string",
      "description": "ID of currently selected job"
    },
    "jobsLoading": {
      "path": "state.jobs.loading",
      "type": "boolean",
      "description": "Whether jobs are currently loading"
    },
    "jobsError": {
      "path": "state.jobs.error",
      "type": "string",
      "description": "Jobs loading error message (if any)"
    },
    "outputs": {
      "path": "state.outputs.list",
      "type": "array",
      "description": "List of generated resumes and documents"
    },
    "outputCount": {
      "path": "state.outputs.list.length",
      "type": "number",
      "description": "Number of generated outputs"
    },
    "selectedOutput": {
      "path": "state.outputs.selectedOutput",
      "type": "object",
      "description": "Currently selected output for preview"
    },
    "selectedOutputId": {
      "path": "state.outputs.selectedOutput.id",
      "type": "string",
      "description": "ID of currently selected output"
    },
    "outputsLoading": {
      "path": "state.outputs.loading",
      "type": "boolean",
      "description": "Whether outputs are currently loading"
    },
    "outputsError": {
      "path": "state.outputs.error",
      "type": "string",
      "description": "Outputs loading error message (if any)"
    },
    "chatMessages": {
      "path": "state.chat.messages",
      "type": "array",
      "description": "Array of chat messages (user and assistant)"
    },
    "chatMessageCount": {
      "path": "state.chat.messages.length",
      "type": "number",
      "description": "Number of chat messages"
    },
    "chatLoading": {
      "path": "state.chat.loading",
      "type": "boolean",
      "description": "Whether chat is processing a message"
    },
    "chatError": {
      "path": "state.chat.error",
      "type": "string",
      "description": "Chat error message (if any)"
    },
    "chatSessionId": {
      "path": "state.chat.sessionId",
      "type": "string",
      "description": "Current chat session identifier"
    },
    "chatInput": {
      "path": "state.chat.input",
      "type": "string",
      "description": "Current chat input text"
    },
    "modalOpen": {
      "path": "state.modal.isOpen",
      "type": "boolean",
      "description": "Whether any modal is currently open"
    },
    "modalType": {
      "path": "state.modal.type",
      "type": "string",
      "values": ["upload", "confirmation", "error", "info"],
      "description": "Type of currently open modal"
    },
    "modalData": {
      "path": "state.modal.data",
      "type": "object",
      "description": "Data context for current modal"
    },
    "notifications": {
      "path": "state.notifications.list",
      "type": "array",
      "description": "Array of active notifications"
    },
    "notificationCount": {
      "path": "state.notifications.list.length",
      "type": "number",
      "description": "Number of active notifications"
    },
    "hasErrors": {
      "path": "state.errors.hasErrors",
      "type": "boolean",
      "description": "Whether there are any application errors"
    },
    "globalError": {
      "path": "state.errors.global",
      "type": "string",
      "description": "Global application error message (if any)"
    },
    "appInitialized": {
      "path": "state.app.initialized",
      "type": "boolean",
      "description": "Whether the application has completed initialization"
    },
    "appVersion": {
      "path": "state.app.version",
      "type": "string",
      "description": "Current application version"
    },
    "apiConnected": {
      "path": "state.app.apiConnected",
      "type": "boolean",
      "description": "Whether API connection is established"
    }
  }
}
