{
  "name": "@cv-builder/agent-graph",
  "version": "0.1.0",
  "description": "LangGraph-based multi-agent system for CV Builder",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./graphs/*": "./src/graphs/*.ts",
    "./nodes/*": "./src/nodes/*.ts",
    "./state/*": "./src/state/*.ts",
    "./chains/*": "./src/chains/*.ts",
    "./utils/*": "./src/utils/*.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@cv-builder/agent-core": "file:../agent-core",
    "@langchain/anthropic": "^0.3.9",
    "@langchain/classic": "^1.0.5",
    "@langchain/core": "^1.1.2",
    "@langchain/langgraph": "^0.2.19",
    "@langchain/openai": "^1.1.3",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "langchain": "^1.1.3",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}
