# pnpm configuration
# Auto install peer dependencies
auto-install-peers=true

# Use shared lockfile
shared-workspace-lockfile=true

# Strict peer dependencies (disabled for Carbon compatibility)
strict-peer-dependencies=false

# Shamefully hoist all dependencies to root node_modules
# Required for: IBM Carbon Design System (@carbon/react) compatibility
# Carbon components expect to find certain peer dependencies in the root
# node_modules rather than being isolated in package-specific locations.
# Without this, Carbon may fail to resolve dependencies at runtime.
# Trade-off: May hide missing dependency declarations in package.json files
shamefully-hoist=true
