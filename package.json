{
  "name": "cv-builder",
  "version": "0.1.0",
  "description": "AI-powered CV builder with Claude agent orchestration",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@cv-builder/browser-app",
    "dev:api": "npm run dev --workspace=@cv-builder/api",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev\"",
    "dev:v2": "ENABLE_V2_API=true concurrently \"npm run dev:api\" \"npm run dev\"",
    "build": "npm run build --workspaces --if-present",
    "prebuild": "npm run security:check",
    "preview": "npm run preview --workspace=@cv-builder/browser-app",
    "start:api": "npm start --workspace=@cv-builder/api",
    "cli": "npm run cli --workspace=@cv-builder/agent-core",
    "cli:headless": "npm run cli:headless --workspace=@cv-builder/agent-core",
    "type-check": "npm run type-check --workspaces --if-present",
    "security:check": "bash scripts/security-check.sh",
    "security:scan": "bash scripts/security-scan.sh",
    "security:verify": "bash scripts/security-verify.sh",
    "prepare": "husky install || echo 'Husky not installed, skipping git hooks'",
    "docker:build": "docker build -t cv-builder-agents .",
    "docker:run": "docker run -it --rm -v $(pwd)/data:/app/data --env-file .env.local cv-builder-agents",
    "screenshots:cleanup": "tsx scripts/cleanup-screenshots.ts",
    "screenshots:cleanup:dry-run": "tsx scripts/cleanup-screenshots.ts --dry-run",
    "screenshots:promote": "tsx scripts/promote-screenshots-to-docs.ts",
    "screenshots:promote:dry-run": "tsx scripts/promote-screenshots-to-docs.ts --dry-run"
  },
  "keywords": [
    "cv",
    "resume",
    "ai",
    "claude",
    "career"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.9.0",
    "concurrently": "^9.1.0",
    "husky": "^8.0.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.10.1",
    "react-redux": "^9.2.0"
  }
}
